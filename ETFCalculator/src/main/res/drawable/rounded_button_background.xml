<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="200dp" />
            <solid android:color="@color/semi_trans_white" />
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:right="16dp"
                android:left="16dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="200dp" />
            <solid android:color="@color/semi_trans_white" />
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:right="16dp"
                android:left="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="200dp" />
            <solid android:color="@color/transparent" />
            <stroke android:color="@color/semi_trans_white"
                android:width="1dp" />
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:right="16dp"
                android:left="16dp" />
        </shape>
    </item>
</selector>