<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyleToggle">@style/ButtonText</item>
        <item name="android:buttonStyle">@style/ButtonText</item>
        <item name="android:windowBackground">@color/holo_blue_dark</item>
    </style>

    <style name="ButtonText" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlueTheme" parent="style/BaseTheme">
        <item name="android:windowBackground">@color/holo_blue_dark</item>
    </style>

    <style name="RedTheme" parent="style/BaseTheme">
        <item name="android:windowBackground">@color/holo_red_dark</item>
    </style>
    <style name="PurpleTheme" parent="style/BaseTheme">
        <item name="android:windowBackground">@color/holo_purple</item>
    </style>
    <style name="GreenTheme" parent="style/BaseTheme">
        <item name="android:windowBackground">@color/holo_green_dark</item>
    </style>
</resources>