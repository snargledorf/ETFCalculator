<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_weight=".5"
        android:id="@+id/linearLayout">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/carrier_spinner"
            android:spinnerMode="dialog"
            android:prompt="@string/carrier_selection_prompt"
            android:layout_marginTop="18dp" />

        <ToggleButton
            android:id="@id/smartphone_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smartphone_toggle"
            android:checked="false"
            android:textOn="@string/smartphone_toggle"
            android:textOff="@string/smartphone_toggle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/contract_end_date_label"
            android:id="@+id/textView"
            android:layout_marginTop="5dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datepicker_fragment_container" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/early_termination_fee_label"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@id/etf_label"
            android:text="$150.00" />
    </LinearLayout>
</LinearLayout>