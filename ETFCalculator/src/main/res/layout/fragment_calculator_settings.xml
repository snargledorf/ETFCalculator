<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theeste.etfcalculator.AdditionContractSettingsFragment">

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="@string/back_icon"
        android:id="@+id/button_back"
        android:background="@drawable/circle_button_background"
        android:layout_gravity="top|left"
        tools:ignore="HardcodedText" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/enable_tmobile" />

            <ToggleButton
                android:id="@+id/toggle_enable_tmobile"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textOn="Yes"
                android:textOff="No"
                android:background="@drawable/rounded_button_background" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@string/contract_date_mode_label" />

            <ToggleButton
                android:id="@+id/toggle_contract_date_mode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textOn="Began"
                android:textOff="Ends"
                android:background="@drawable/rounded_button_background" />

        </TableRow>
    </TableLayout>
</FrameLayout>
